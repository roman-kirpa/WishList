@{
    ViewBag.Title = "Home Page";
    var name = ViewBag.UserName;
}


<div class="form-group">
    <label for="inputUrl">Enter address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter url" onkeydown="SetToDB(this)">
    <small id="emailHelp" class="form-text text-muted">enter adrees here to save this item to wish list.</small>
</div>

@{Html.RenderAction("GetItems", "Items", new { nameUser = name}); }

<script>
    function SetToDB(element) {
        debugger;
        if (event.key === 'Enter') {
            var val = element.value;
            window.location.href = '@Url.Action("Set", "Items")'+'?url=' + val;
        }
    }
</script>
